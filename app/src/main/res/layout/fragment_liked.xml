<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/liked_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/biko_bold"
        android:text="LIKED"
        android:textAlignment="center"
        android:textColor="@color/pinkDefault"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/emptyListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="1dp"
        android:fontFamily="@font/biko_bold"
        android:text="No Liked Songs"
        android:textColor="@color/pinkHollow"
        android:textSize="25sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/likedRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/liked_header"
        android:layout_marginTop="35dp"
        tools:listitem="@layout/search_recycler_items" />

</RelativeLayout>