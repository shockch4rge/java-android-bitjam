<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BitJam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pinkDefault</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPinkHollow">@color/pinkHollow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="bottomNavSelected" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/biko_regular</item>
        <item name="itemTextColor">@color/pinkDeep</item>
        <item name="itemIconTint">@color/pinkDeep</item>
    </style>
    <style name="bottomNavUnselected" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/biko_regular</item>
        <item name="itemTextColor">@color/pinkHollow</item>
        <item name="itemIconTint">@color/pinkHollow</item>
    </style>
</resources>